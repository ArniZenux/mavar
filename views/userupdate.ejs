<%- include('header') -%>

<br>

<h2 class="header__title"><%= subtitle %></h2>

<% for(let user of model) { %>
<form method="post" action="/update_user/<%= user.kt %>" enctype="application/x-www-form-urlencoded" >
    <div class="form-group">
      <label for="nationalId">Kennitala</label>
      <input type="text" class="form-control" name="" placeholder="<%= user.kt %>" >
    </div>  

    <div class="field<%= locals.isInvalid('nafn', errors) ?  ' field--invalid' : '' %>">
      <label for="name">Nafn</label>
      <input type="text" class="form-control" name="nafn" value="<%= user.nafn %>" placeholder="<%= user.nafn %>" >
    </div>
      
    <div class="field<%= locals.isInvalid('simanumer', errors) ?  ' field--invalid' : '' %>">
      <label for="simanumer">Símanúmer</label>
      <input type="text" class="form-control" name="simi" value="<%= user.simi %>" placeholder="<%= user.simi %>" >
    </div>

    <div class="field<%= locals.isInvalid('email', errors) ?  ' field--invalid' : '' %>">
      <label for="email">Netfang</label>
      <input type="email" class="form-control" name="netfang" value="<%= user.netfang %>" placeholder="<%= user.netfang %>" >
    </div>
    <br>
    
    <% if (errors.length > 0) { %>
      <h2 class="errors__title">Villur:</h2>
      <ul class="errors">
        <% errors.forEach((error) => { %>
          <li class="error"><label for="<%= error.param %>"><%= error.msg %></label></li>
        <% }); %>
      </ul>
    <% } %>
    <br>
   <% } %>   
  <Button class="btn btn-sm btn-warning">Uppfæra</Button>
</form>

<br>

<%- include('footer') -%> 